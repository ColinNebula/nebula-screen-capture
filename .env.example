# Environment Variables Template for Nebula Screen Capture
# Copy this file to .env and fill in your actual values
# NEVER commit .env or files containing real secrets to version control!

# =============================================================================
# APP CONFIGURATION
# =============================================================================
REACT_APP_VERSION=1.0.0
REACT_APP_NAME=Nebula Screen Capture
REACT_APP_DESCRIPTION=Professional screen recording made simple

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
NODE_ENV=production
GENERATE_SOURCEMAP=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
PUBLIC_URL=https://your-username.github.io/nebula-screen-capture
REACT_APP_BASE_URL=/nebula-screen-capture

# =============================================================================
# FEATURE FLAGS
# =============================================================================
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_TRACKING=false
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_ENABLE_PWA=true

# =============================================================================
# RECORDING SETTINGS
# =============================================================================
REACT_APP_MAX_RECORDING_DURATION=3600000
REACT_APP_MAX_FILE_SIZE=524288000
REACT_APP_DEFAULT_VIDEO_QUALITY=1080p
REACT_APP_DEFAULT_FRAME_RATE=30
REACT_APP_DEFAULT_VIDEO_CODEC=VP9
REACT_APP_DEFAULT_AUDIO_CODEC=opus
REACT_APP_DEFAULT_AUDIO_BITRATE=128000

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
REACT_APP_FREE_STORAGE_QUOTA=500
REACT_APP_PRO_STORAGE_QUOTA=10240
REACT_APP_PREMIUM_STORAGE_QUOTA=102400

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
REACT_APP_RATE_LIMIT_REQUESTS=10
REACT_APP_RATE_LIMIT_WINDOW=60000
REACT_APP_MAX_LOGIN_ATTEMPTS=5
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_ENABLE_CSP=true

# =============================================================================
# ADMIN CREDENTIALS (CHANGE THESE IN PRODUCTION!)
# =============================================================================
REACT_APP_ADMIN_USERNAME=admin
REACT_APP_ADMIN_PASSWORD=ChangeThisPassword123!
REACT_APP_ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# API CONFIGURATION (for future backend integration)
# =============================================================================
REACT_APP_API_URL=
REACT_APP_API_TIMEOUT=30000
REACT_APP_WS_URL=

# =============================================================================
# THIRD-PARTY SERVICES (add your keys)
# =============================================================================
# Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# Cloud Storage
REACT_APP_AWS_REGION=
REACT_APP_AWS_BUCKET=
REACT_APP_AWS_ACCESS_KEY_ID=
REACT_APP_AWS_SECRET_ACCESS_KEY=

# Payment (Stripe)
REACT_APP_STRIPE_PUBLISHABLE_KEY=
REACT_APP_STRIPE_PRO_PRICE_ID=
REACT_APP_STRIPE_PREMIUM_PRICE_ID=

# OAuth
REACT_APP_GOOGLE_CLIENT_ID=
REACT_APP_GITHUB_CLIENT_ID=

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
REACT_APP_DEFAULT_THEME=dark
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_LANGUAGE=en

# =============================================================================
# DEMO CONFIGURATION
# =============================================================================
REACT_APP_DEMO_MODE=true
REACT_APP_DEMO_EMAIL=demo@nebula.com
REACT_APP_DEMO_PASSWORD=demo123

# =============================================================================
# SOCIAL & BRANDING
# =============================================================================
REACT_APP_SUPPORT_URL=
REACT_APP_DOCS_URL=
REACT_APP_GITHUB_REPO=https://github.com/your-username/nebula-screen-capture

# =============================================================================
# NOTES
# =============================================================================
# - All REACT_APP_ variables are embedded in the client bundle and PUBLIC
# - Never store actual API keys or secrets here
# - Restart dev server after changing .env values
# - See .env for full list of available variables
