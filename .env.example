# Nebula Screen Capture - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# App Version
REACT_APP_VERSION=2.0.0

# Demo Mode (set to 'true' for demo/development)
REACT_APP_DEMO_MODE=false

# Public URL (for production builds)
PUBLIC_URL=https://nebula-screen-capture.web.app

# =============================================================================
# ADMIN CREDENTIALS
# =============================================================================
# WARNING: These should be secured via backend authentication in production
# For now, they're used for client-side admin access

REACT_APP_ADMIN_USERNAME=admin
REACT_APP_ADMIN_PASSWORD=your_secure_admin_password_here
REACT_APP_ADMIN_EMAIL=colinnebula@gmail.com

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Get these from: Firebase Console > Project Settings > General > Your apps

REACT_APP_FIREBASE_API_KEY=your_firebase_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=nebula-screen-capture.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=nebula-screen-capture
REACT_APP_FIREBASE_STORAGE_BUCKET=nebula-screen-capture.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
REACT_APP_FIREBASE_APP_ID=your_app_id_here
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Firebase Functions URL
REACT_APP_FIREBASE_FUNCTIONS_URL=https://us-central1-nebula-screen-capture.cloudfunctions.net
# For local development:
# REACT_APP_FIREBASE_FUNCTIONS_URL=http://localhost:5001/nebula-screen-capture/us-central1

# API URL (fallback)
REACT_APP_API_URL=https://nebula-screen-capture.firebaseapp.com

# =============================================================================
# PAYMENT INTEGRATIONS
# =============================================================================

# Stripe (Get from: https://dashboard.stripe.com/apikeys)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# NOTE: Secret key should NEVER be in frontend - handle via Firebase Functions

# PayPal (Get from: https://developer.paypal.com/dashboard/applications)
REACT_APP_PAYPAL_CLIENT_ID=your_paypal_client_id_here
# For sandbox testing, use: sb-xxxxx format
# For production: use your production client ID

# =============================================================================
# EMAIL SERVICES
# =============================================================================
# Note: These are primarily for Firebase Functions (functions/.env)
# But may be referenced in client-side code

REACT_APP_SUPPORT_EMAIL=colinnebula@gmail.com
REACT_APP_NO_REPLY_EMAIL=noreply@nebula3ddev.com

# =============================================================================
# THIRD-PARTY SERVICES (Optional)
# =============================================================================

# Analytics (Google Analytics, Mixpanel, etc.)
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Error Tracking (Sentry, etc.)
# REACT_APP_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# CDN/Storage
# REACT_APP_CDN_URL=https://cdn.nebula3ddev.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS Allowed Origins (comma-separated)
REACT_APP_ALLOWED_ORIGINS=https://nebula-screen-capture.web.app,https://nebula3ddev.com

# Rate Limiting
REACT_APP_MAX_REQUESTS_PER_MINUTE=60

# Session Timeout (minutes)
REACT_APP_SESSION_TIMEOUT=30

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features during development
REACT_APP_ENABLE_VIDEO_EDITOR=true
REACT_APP_ENABLE_WATERMARK=true
REACT_APP_ENABLE_AUTO_CAPTIONS=true
REACT_APP_ENABLE_BACKGROUND_REMOVAL=true
REACT_APP_ENABLE_BATCH_OPERATIONS=true

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# =============================================================================

# Enable console logging in development
REACT_APP_DEBUG=false

# Enable performance monitoring
REACT_APP_PERFORMANCE_MONITORING=false

# Verbose error messages
REACT_APP_VERBOSE_ERRORS=false
