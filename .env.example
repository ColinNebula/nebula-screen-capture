# Environment Variables Template
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local or any file containing real secrets!

# App Configuration
REACT_APP_VERSION=1.0.0
REACT_APP_NAME=Nebula Screen Capture

# Build Configuration
# Set to 'production' or 'development'
NODE_ENV=production

# GitHub Pages Configuration (public - no secrets)
PUBLIC_URL=https://ColinNebula.github.io/nebula-screen-capture

# Feature Flags (public)
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_TRACKING=false
REACT_APP_ENABLE_DEBUG_MODE=false

# Security Settings (public)
REACT_APP_MAX_RECORDING_DURATION=3600000
REACT_APP_MAX_FILE_SIZE=524288000
REACT_APP_RATE_LIMIT_REQUESTS=10
REACT_APP_RATE_LIMIT_WINDOW=60000

# Add your custom variables below
# Remember: All REACT_APP_ variables are PUBLIC and embedded in the build
# NEVER put secrets here that should remain private!
